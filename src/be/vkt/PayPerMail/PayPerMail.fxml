<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="be.vkt.PayPerMail.PpmController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Bestand">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Maak formulier leeg" onAction="#clearForm"/>
                        <MenuItem mnemonicParsing="false" text="Afsluiten" onAction="#closeApp"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Over" onAction="#showAbout"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <GridPane hgap="5.0" vgap="5.0">
            <Button fx:id="btnClear" mnemonicParsing="false" text="Maak formulier leeg"
                    GridPane.columnSpan="2147483647" GridPane.rowIndex="0" onAction="#clearForm"/>
            <Label fx:id="lblAmount" text="Bedrag" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="fldAmount" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <!-- CN: Customer Name -->
            <Label fx:id="lblCN" text="Naam kaarthouder" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="fldCn" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label fx:id="lblEmail" text="E-mail" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="fldEmail" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Button fx:id="btnSurfToPayPage" mnemonicParsing="false" text="Ga direct naar Betaalpagina"
                    GridPane.columnSpan="2147483647" GridPane.rowIndex="4" onAction="#surfToPayPage"/>
            <Button fx:id="btnGenerateQr" mnemonicParsing="false" text="Genereer QR code"
                    GridPane.columnSpan="2147483647" GridPane.rowIndex="5" onAction="#generateQrCode"/>
            <ImageView fx:id="imgQr" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true"
                       GridPane.columnSpan="2147483647" GridPane.rowIndex="6">
                <viewport>
                    <Rectangle2D/>
                </viewport>
            </ImageView>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="400.0"/>
            </rowConstraints>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </GridPane>
    </children>
</VBox>
